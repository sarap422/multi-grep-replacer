{
  "name": "multi-grep-replacer",
  "version": "1.0.0",
  "description": "Multi Grep Replacer - A cross-platform desktop app for batch find and replace operations",
  "main": "src/main/main.js",
  "author": "Multi Grep Replacer Team",
  "license": "MIT",
  "keywords": [
    "electron",
    "grep",
    "replace",
    "batch",
    "find-replace"
  ],
  "scripts": {
    "start": "electron .",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:syntax": "eslint src/**/*.js --max-warnings 0",
    "test:security": "eslint src/**/*.js --config .eslintrc.security.js",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.js\" \"*.json\" \"*.md\"",
    "debug": "NODE_ENV=development electron . --enable-logging",
    "debug:verbose": "NODE_ENV=development DEBUG=* electron . --enable-logging --verbose",
    "build:dev": "electron-builder --mac --config electron-builder.dev.json",
    "build:production": "electron-builder --mac --config electron-builder.prod.json",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "vibelogger": "^0.1.0"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^2.8.0"
  },
  "build": {
    "appId": "com.multigrepreplacer.app",
    "productName": "Multi Grep Replacer",
    "directories": {
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon.ico"
    }
  }
}
