{
  "name": "multi-grep-replacer",
  "version": "1.0.0",
  "description": "Electron-based multi grep replacer with superior UI responsiveness",
  "main": "src/main/main.js",
  "author": "Multi Grep Replacer Team",
  "license": "MIT",
  "homepage": "https://github.com/multi-grep-replacer/multi-grep-replacer",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:dev": "electron-builder --dir",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "lint:check": "eslint src/ --ext .js --max-warnings 25",
    "format": "prettier --write \"src/**/*.{js,html,css,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,html,css,json,md}\"",
    "format:diff": "prettier --list-different \"src/**/*.{js,html,css,json,md}\"",
    "quality": "npm run lint:check && npm run format:check",
    "quality:fix": "npm run lint:fix && npm run format",
    "test": "jest",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:performance": "node tests/performance-test.js",
    "test:syntax": "node -c src/main/main.js && node -c src/preload/preload.js",
    "test:single-instance": "DEBUG_SINGLE_INSTANCE=true electron .",
    "test:all": "npm run quality && npm run test:syntax && npm run test -- --passWithNoTests",
    "logs:analyze": "node scripts/logs-analyzer.js",
    "prepare": "npm run quality"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "jest-html-reporters": "^3.1.0",
    "spectron": "^19.0.0",
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "babel-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.0",
    "prettier": "^2.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.multigrepreplacer.app",
    "productName": "MultiGrepReplacer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json",
      "!tests/**/*",
      "!coverage/**/*",
      "!debug/**/*"
    ],
    "extraResources": [
      "config/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "electron",
    "grep",
    "replace",
    "text-processing",
    "developer-tools",
    "multi-replacement"
  ],
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{html,css,json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:all"
    }
  }
}