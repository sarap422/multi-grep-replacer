{
  "name": "multi-grep-replacer",
  "version": "1.0.0",
  "description": "Electron-based multi grep replacer with superior UI responsiveness",
  "main": "src/main/main.js",
  "author": "Multi Grep Replacer Team",
  "license": "MIT",
  "homepage": "https://github.com/multi-grep-replacer/multi-grep-replacer",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "electron-builder",
    "build:dev": "electron-builder --dir",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "test": "jest",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "test:performance": "node tests/performance-test.js",
    "logs:analyze": "node scripts/analyze-logs.js"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.8"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "build": {
    "appId": "com.multigrepreplacer.app",
    "productName": "MultiGrepReplacer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "keywords": [
    "electron",
    "grep",
    "replace",
    "text-processing",
    "developer-tools",
    "multi-replacement"
  ]
}